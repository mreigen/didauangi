/* App Controllers */
function DistrictsCtrl($scope, $http) {
  $http.get('/api/v1/get_districts.json?city_id=ho-chi-minh&fields=id,name').
  success(function(data) {
    $scope.districts = data;
  });
  //$scope.districts = Districts.get({city_id: "ho-chi-minh"});
  
  setTimeout(function() {
    console.log($scope.districts);
  }, 2000);
};

function SubCatsCtrl($scope, $http) {
  $http.get('/api/v1/get_subcats.json?main_cat_id=1').
  success(function(data) {
    $scope.subcats = data;
  });
  
  $scope.predecate = function(subcat) {
    return subcat.name;
  }
};

